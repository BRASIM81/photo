<!DOCTYPE html>
html(lang="en")
    head
        include includes/head
        title Simon R Brain - photography
    body
        include includes/nav
        include includes/carousel
        #wrap
          .container#contact
            h1.wow.fadeIn.display-2.py-2 Contact Me
            <form method="post" action="" class="pb-4">
              <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="name">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input id="email" class="form-control" type="email" name="email">
              </div>
              <div class="form-group">
                <label for="msg">Mesage</label>
                <textarea id="msg" class="form-control" name="msg" rows="5"></textarea>
              </div>
              <button class="btn btn-success btn-lg mr-3" type="submit">Send</button>
              <button class="btn btn-danger btn-lg" type="reset">Reset</button>
            </form>
        include includes/footer