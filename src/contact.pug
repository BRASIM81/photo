<!DOCTYPE html>
html(lang="en")
    head
        include includes/head
        title Simon R Brain - photography
    body
        include includes/nav
        include includes/carousel
        
        h1.wow.fadeIn Contact Me
        .container#contact
          form(action="")
            .form-row
              .col-md-4.mb-3
                label(for="") First Name
                input.form-control(type="", placeholder="JOE " required)
              .col-md-4.mb-3
                label(for="") Last Name
                input.form-control(type="", placeholder="BLOGS" required)
              .col-md-4.mb-3
                label(for="") Username
                .input-group
                  .input-group-prepnd
                    span.input-group-text#inputGrupPrepend @
                  input.form-control(type="", placeholder="USERNAME")
            .form-row
              .col-md-12
                label(for="") Email
                input.form-control(type="email" required placeholder="joeblogs@gmail.com")
            .form-row
              .col.md-12.mb-3
                label(for="") Address
                input.form-control(type="", placeholder="" required)
            .form-row
              .col-md-6.mb-3
                label(for="") Postcode
                input.form-control(type="", placeholder="" required)
              .col-md-6.mb-3
                label(for="") Tel
                input.form-control(type="tel", placeholder="" required)
            .form-row
              .col-md-12
                label(for="") Message
                textarea.form-control(name="", placeholder="Message...." cols="30", rows="10", required)
            button.btn.btn-success.m-3.d-shadow(type="submit") Send Message
            button.btn.btn-danger.m-3.d-shadow(type="reset") Reset
        include includes/footer