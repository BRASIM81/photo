        #wrap
          .container#contact
            h1.wow.fadeIn.display-2.py-2 Contact Me
            .row
              .col-sm-7
                <form method="post" action="" class="pb-4">
                  <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="name">
                  </div>
